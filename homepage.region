<!DOCTYPE html>
<html>

<head>
   {squarespace-headers}
   <squarespace:script src="aria.js" />
</head>

<body>
   <squarespace:navigation navigationId="maNav" template="header" />
   
   <main>
      <!-- Main image Banner, some differences from general banner -->
      <section class="hero-banner">
         {.section collection}
            {.section mainImage}
               <img src="{assetUrl}" alt="{title}">
            {.end}
            <div>
               <squarespace:block-field id="hero-text" columns="1"/>
            </div>      
         {.end}
      </section>

      <section id="page" role="main" data-content-field="main-content">
         {squarespace.main-content}
      </section>
   </main>

   {@|apply footer.block}
</body>

</html>