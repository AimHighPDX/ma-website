<!DOCTYPE html>
<html>

<head>
   {squarespace-headers}
   <squarespace:script src="aria-disclosures.js" combo="true" />
</head>

<body>
   <squarespace:navigation navigationId="maNav" template="header" />

   <main data-content-field="main-content">
      <section class="hero-banner">
         {.section collection}
            {.section mainImage}
               <img src="{assetUrl}" alt="{title}">
            {.end}
            <div>
               <squarespace:query collection="program" limit="1" category="{navigationTitle}">
                  {.repeated section items}
                     <img src="{customContent.logo}" alt="{title}">
                  {.end}
               </squarespace:query>
               <h1>{collection.title}</h1>
            </div>
         {.end}
      </section>

      {@|apply class-section.block}

      <section class="centered-section">
         <h2>Classes</h2>
         <div class="query-class-container">
            <squarespace:query collection="schedule" limit="20" category="{collection.navigationTitle}">
               {.repeated section items}
                  <div class="query-class">
                     <h3>{customContent.level}</h3>
                     <div>
                        <p>{customContent.duration}</p>
                        <table class="class-times">
                           <caption class="visually-hidden">{title} Schedule</caption>
                           <tr>
                              <th>Mon/Wed</th>
                              <th>Tue/Thu</th>
                              <th>Sat</th>
                           </tr>
                           <tr>
                              <td>{customContent.time-monday}</td>
                              <td>{customContent.time-tuesday}</td>
                              <td>{customContent.time-saturday}</td>
                           </tr>
                        </table>
                        <details>
                           <summary><h4>Gear Requirements</h4></summary>
                           <div>
                              {body}
                           </div>
                        </details>
                     </div>
                  </div>
               {.end}
            </squarespace:query>
         </div>

         <div class="button-set">
            <a href="/class-schedule" class="button">
               Schedule for all programs
            </a>
            <a href="/contact" class="button secondary">
               Contact us for private lessons <span aria-hidden="true">â†’</span>
            </a>
         </div>
      </section>

      <section class="full-section">
         <squarespace:query collection="staff" limit="1" category="{collection.navigationTitle}">
            {.repeated section items}
               <section class="staff-standalone" data-item-id="{item.id}">
                  <div class="staff-image">
                     <div></div>
                     <img src="{customContent.staff-image.assetUrl}" alt="{title}">
                  </div>
                  
                  <div class="staff-text">
                     <h2 data-content-field="title">{title}</h2>
                     <h3>
                        {customContent.program} {customContent.staff-role}
                     </h3>
                     {body}
                  </div>
               </section>
            {.end}
         </squarespace:query>
      </section>

   </main>

   {@|apply footer.block}
</body>

</html>