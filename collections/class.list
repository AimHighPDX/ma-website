<!-- This is a real table. NEVER change the table display properties.-->

<section>
   <h2>Class Schedule</h2>
   <p>Last updated {collection.updatedOn|date %m-%d-%Y}</p>
   <section tabindex="0" role="region" aria-labelledby="class-schedule-title" class="table-wrapper">
      <table id="class-schedule-table">
         <caption id="class-schedule-title" class="visually-hidden">Class Schedule</caption>
         <tr>
            <th></th>
            <th>Monday</th>
            <th>Tuesday</th>
            <th>Wednesday</th>
            <th>Thursday</th>
            <th>Friday</th>
            <th>Saturday</th>
            <th>Sunday</th>
         </tr>
         {.repeated section items}
            <tr>
               <th>{title}</th>
               {.section customContent}
                  <td>{time-monday}</td>
                  <td>{time-tuesday}</td>
                  <td>{time-wednesday}</td>
                  <td>{time-thursday}</td>
                  <td>closed</td>
                  <td>{time-saturday}</td>
                  <td>closed</td>
               {.end}
            </tr>
         {.end}
      </table>
   </section>
   <div id="schedule-pdfs">
      <p><a href="/s/AHAMA_schedule.pdf">PDF schedule</a></p>
      <p><a href="/s/AHAMA_schedule_bw.pdf">Printer-friendly PDF schedule</a></p>
   </div>
   <squarespace:block-field id="schedule-callout" label="Schedule CTA" columns="1"/>
</section>

<section>
   <h2>Check in guide</h2>
   <section class="grid-container">
      <div class="grid-header">
         <h3>Zen Planner</h3>
         <p>Reservations and check ins can only be done 30 minutes prior to start time.</p>
      </div>
      <div class="grid-item">
         <squarespace:block-field id="zenplanner-step-1" label="Zen Planner Step 1" columns="1"/>
      </div>
      <div class="grid-item">
         <squarespace:block-field id="zenplanner-step-2" label="Zen Planner Step 2" columns="1"/>
      </div>
      <div class="grid-item">
         <squarespace:block-field id="zenplanner-step-3" label="Zen Planner Step 3" columns="1"/>
      </div>
      <div class="grid-item">
         <squarespace:block-field id="zenplanner-step-4" label="Zen Planner Step 4" columns="1"/>
      </div>
   </section>
   <section class="grid-container">
      <div class="grid-header">
         <h3>Front Desk</h3>
      </div>
      <div class="grid-item">
         <squarespace:block-field id="frontdesk-step-1" label="Front Desk Step 1" columns="1"/>
      </div>
      <div class="grid-item">
         <squarespace:block-field id="frontdesk-step-2" label="Front Desk Step 2" columns="1"/>
      </div>
      <div class="grid-item">
         <squarespace:block-field id="frontdesk-step-3" label="Front Desk Step 3" columns="1"/>
      </div>
   </section>
</section>