{.section item}
   <section class="staff">
      <img src="{@|staff-image}" alt="{@|staff-name}">
      <div>
         <div>
            <h2>{@|staff-name}</h2>
            <h3>{@|staff-role}</h3>
            <ul>
               <li>{@|staff-certs}</li>
            </ul>
         </div>
         <div>
            <h4>Martial Arts Style:</h4>
            <ul>
               <li>{@staff-style}</li>
            </ul>
         </div>
      </div>
   </section>
{.end}
