<!DOCTYPE html>
<html>

<head>
   {squarespace-headers}
   <squarespace:script src="aria.js" />
   <squarespace:script src="form-replacement.js" />

</head>

<body>
   <squarespace:navigation navigationId="maNav" template="header" />
   <main>
      <section id="page" role="main" data-content-field="main-content">
         <div>
            <squarespace:block-field id="belt-promotion-intro" label="Belt Promotion Intro" columns="1"/>
         </div>

         <squarespace:query collection="belt-promotion-application">
            {@|apply form.list}
         </squarespace:query>

         <section class="belt-promotion-programs">
            <section>
               <h3>Little Warriors</h3>
               <h4>Testing Dates</h4>
               <ul>
                  <ul data-js="reverse-list"> {# This ul will be removed with js}
                     {.repeated section past}
                        {.repeated section categories}
                           {.equal? @ "Warriors"}
                              <li class="past">{startDate|date %m/%d}</li>
                           {.end}
                        {.end}
                     {.end}
                  </ul>
                  {.repeated section upcoming}
                     {.repeated section categories}
                        {.equal? @ "Warriors"}
                           <li>{startDate|date %m/%d}</li>
                        {.end}
                     {.end}
                  {.end}
               </ul>
               <div>
                  <h4>Application</h4>
                  <div class="button-set">
                     <button class="open-dialog" onclick="openDialog('belt-promotion-form', this);updateBeltPromotion('Little Warriors');">Application</button>
                  </div>
               </div>
            </section>

            <section>
               <h3>Warriors Junior</h3>
               <h4>Testing Dates</h4>
               <ul>
                  <ul data-js="reverse-list"> {# This ul will be removed with js}
                     {.repeated section past}
                        {.repeated section categories}
                           {.equal? @ "Warriors"}
                              <li class="past">{startDate|date %m/%d}</li>
                           {.end}
                        {.end}
                     {.end}
                  </ul>
                  {.repeated section upcoming}
                     {.repeated section categories}
                        {.equal? @ "Warriors"}
                           <li>{startDate|date %m/%d}</li>
                        {.end}
                     {.end}
                  {.end}
               </ul>
               <div>
                  <h4>Application</h4>
                  <div class="button-set">
                     <button onclick="openDialog('belt-promotion-form', this);updateBeltPromotion('Warriors Junior');">Application</button>
                  </div>
               </div>
            </section>
   
            <section>
               <h3>MMA</h3>
               <h4>Testing Dates</h4>
               <ul>
                  <ul data-js="reverse-list"> {# This ul will be removed with js}
                     {.repeated section past}
                        {.repeated section categories}
                           {.equal? @ "MMA"}
                              <li class="past">{startDate|date %m/%d}</li>
                           {.end}
                        {.end}
                     {.end}
                  </ul>
                  {.repeated section upcoming}
                     {.repeated section categories}
                        {.equal? @ "MMA"}
                           <li>{startDate|date %m/%d}</li>
                        {.end}
                     {.end}
                  {.end}
               </ul>
               <div>
                  <h4>Application</h4>
                  <div class="button-set">
                     <button onclick="openDialog('belt-promotion-form', this);updateBeltPromotion('MMA');">Application</button>
                  </div>
               </div>
            </section>
   
            <section>
               <h3>Taekwondo</h3>
               <h4>Testing Dates</h4>
               <ul>
                  <ul data-js="reverse-list"> {# This ul will be removed with js}
                     {.repeated section past}
                        {.repeated section categories}
                           {.equal? @ "Taekwondo"}
                              <li class="past">{startDate|date %m/%d}</li>
                           {.end}
                        {.end}
                     {.end}
                  </ul>
                  {.repeated section upcoming}
                     {.repeated section categories}
                        {.equal? @ "Taekwondo"}
                           <li>{startDate|date %m/%d}</li>
                        {.end}
                     {.end}
                  {.end}
               </ul>
               <div>
                  <h4>Application</h4>
                  <div class="button-set">
                     <button onclick="openDialog('belt-promotion-form', this);updateBeltPromotion('Taekwondo');">Application</button>
                  </div>
               </div>
            </section>
   
            <section>
               <h3>Tang Soo Do</h3>
               <h4>Testing Dates</h4>
               <ul>
                  <ul data-js="reverse-list"> {# This ul will be removed with js}
                     {.repeated section past}
                        {.repeated section categories}
                           {.equal?:@:"Tang Soo Do"}
                              <li class="past">{startDate|date %m/%d}</li>
                           {.end}
                        {.end}
                     {.end}
                  </ul>
                  {.repeated section upcoming}
                     {.repeated section categories}
                        {.equal?:@:"Tang Soo Do"}
                           <li>{startDate|date %m/%d}</li>
                        {.end}
                     {.end}
                  {.end}
               </ul>
               <div>
                  <h4>Application</h4>
                  <div class="button-set">
                     <button onclick="openDialog('belt-promotion-form', this);updateBeltPromotion('Tang Soo Do');">Application</button>
                  </div>
               </div>
            </section>
         </section>

         <dialog id="belt-promotion-form" class="modal-dialog">
            <div>
               <header autofocus>
                  <h2 class="heading-level3">Belt Promotion Application</h2>
                  <button class="icon-button" onclick="dispatchCloseEvent(this);">
                     <div class="icon" aria-hidden="true">&#x2715;</div>
                     <span class="text visually-hidden">Close dialog</span>
                  </button>
               </header>
               <div class="dialog-body">
                  <squarespace:query collection="belt-promotion-application">
                     {@|apply form.list}
                  </squarespace:query>
               </div>
            </div>
         </dialog>
      </section>
   </main>

   {@|apply footer.block}
</body>

</html>