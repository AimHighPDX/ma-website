<!DOCTYPE html>
<html>

<head>
   {squarespace-headers}
   <squarespace:script src="aria-disclosures.js" combo="true" defer />
</head>

<body>
   <squarespace:navigation navigationId="maNav" template="header" />
   <main>
      {@|apply banner.block}

      <section id="page" role="main" data-content-field="main-content">
         <section>
            <h2>General</h2>
            <div class="button-set">
               <a href="" class="button">Belt Promotion</a>
               <a href="/schedule" class="button">Class Schedule</a>
               <a href="" class="button">How To Check In</a>
               <a href="" class="button">How To Tie a Belt</a>
               <a href="" class="button">Student Highlights</a>
            </div>
         </section>

         <section>
            <h2>By Program</h2>
            <section id="curriculum" class="tabs tabs-style-component" data-start="1" data-js="tabs">
               <squarespace:query collection="program">
                  <div data-js="tab-pair">
                     <h3>{title}</h3>
                     <div>
                        <squarespace:query collection="curriculum" category="{program}">
                           <details>
                              <summary>Curriculum</summary>
                           </details>
                           <div>
                              <ul>
                                 {.repeated section items}
                                    <li>
                                       <a href="{sourceUrl}" target="_blank" data-color="{customContent.color}">
                                          {title}
                                       </a>
                                    </li>
                                 {.end}
                              </ul>
                           </div>
                        </squarespace:query>
                        <details>
                           <summary>Videos</summary>
                           <div class="accordian-content">
                              <squarespace:block-field id="{collection.id}-videos" label="Videos" columns="1"/>
                           </div>
                        </details>
                        <details>
                           <summary>Additional Information</summary>
                           <div class="accordian-content">
                              <squarespace:block-field id="{collection.id}-add-info" label="Additional Information" columns="1"/>
                           </div>
                        </details>
                     </div>
                  </div>
               </squarespace:query>
            </section>
         </section>

         <template id="tabs-template">
            <!-- This will be recreated in JS -->
            <section id="" class="tabs tabs-style-component" data-start="1">
               <div class="tablist-style-full" role="tablist" aria-orientation="vertical" aria-label="Vertical Tabs">
                     <button id="curriculum-ID-tab" aria-controls="curriculum-ID-tabpanel" role="tab">
                     </button>
               </div>
               <div id="curriculum-ID-tabpanel" role="tabpanel" aria-labelledby="curriculum-ID-tab">

               </div>

            </section>
         </template>

         <section>
            <h2>Videos</h2>
            Some more stuff with queries.
         </section>
      </section>
   </main>

   {@|apply footer.block}
</body>

</html>